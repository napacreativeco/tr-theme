{% if page.handle == 'data-sale-opt-out' %}
  <style>
    main {
      padding: 110px var(--side-padding) 40px var(--side-padding);
    }

    h1 {
      font-size: var(--header-font);
      color: var(--green);
      margin: 0 0 20px 0;
    }

    form .field {

    }

    form button {
      display: inline;
      background: transparent;
