{{ 'component--tour-hero.css' | asset_url | stylesheet_tag }}

<div class="swiper tour-hero--swiper">
    
  <div class="swiper-wrapper">
    
    {% for block in section.blocks %}
        <div class="swiper-slide" style="background: url('{{ block.settings.background_image | image_url: width: '2200' }}'); background-size: cover; background-position: center center;">
            
            <div class="overlay">
                <h2 class="title">{{ block.settings.slide_title }}</h2>
                <p class="text">{{ block.settings.slide_text }}</p>
                <h3 class="dates">{{ block.settings.slide_dates }}</h3>
            </div>
        </div>
    {% endfor %}

  </div>
  
  <div class="swiper-pagination"></div>

  <div class="swiper-controls">
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

</div>

{% schema %}
    {
      "name": "Tour Hero",
      "tag": "section",
      "class": "tour-hero",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ],
      "blocks": [
        {
            "type": "slide",
            "name": "Tour Highlight",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "background_image",
                    "label": "Background Image"
                },
                {
                    "type": "text",
                    "id": "slide_title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "slide_text",
                    "label": "Lineup"
                },
                {
                    "type": "text",
                    "id": "slide_dates",
                    "label": "Dates"
                },
                {
                    "type": "url",
                    "id": "slide_link",
                    "label": "Link"
                }
            ]
        }
      ],
      "presets": [
        {
          "name": "Tour Hero"
        }
      ],
      "enabled_on": {
        "templates": ["page"]
      }
    }
{% endschema %}