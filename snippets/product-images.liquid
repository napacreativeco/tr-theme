{% if product.images.size == 0 %}
    <div class="image">
      <img src="{{ '' | img_url: 'grande' }}" alt="" />

      <div class="expand-image">
        {% render 'icon--expand' %}
      </div>
    </div>
  {% else %}

    <div class="image">
      <img class="main-image" src="{{ product.featured_image | image_url: width: '1000' }}" alt="{{ product.featured_image.alt | escape }}" width="100%" height="100%" />

      <div class="expand-image" data-image="{{ product.featured_image | image_url: width: '1000' }}" data-alt="{{ product.featured_image.alt | escape }}">
        {% render 'icon--expand' %}
      </div>
      
    </div>
      
    {% if product.images.size > 1 %}
      <ul class="thumbnail-rack">
        {% for image in product.images %}
          <li>
            <a href="{{ image | img_url: '1024x1024' }}">
              <img src="{{ image | img_url: 'large' }}" alt="{{ image.alt | escape }}" />
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  
  {% endif %}